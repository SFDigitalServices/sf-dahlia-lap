    "babel-loader": "^7.1.2",
    "babel-plugin-root-import": "5.1.0",
    "babel-preset-react": "^6.24.1",
    "classnames": "^2.2.5",
    "coffeescript": "1.12.7",
    "dotenv": "^7.0.0",
    "grunt": "0.4.5",
    "grunt-contrib-clean": "0.6.0",
    "grunt-contrib-copy": "0.8.1",
    "grunt-json-remove-fields": "^0.1.2",
    "grunt-replace": "0.11.0",
    "grunt-sort-json": "0.0.5",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "postcss-smart-import": "^0.7.6",
    "prop-types": "^15.7.2",
    "puppeteer": "^1.14.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-form": "2.6.1",
    "react-json-tree": "^0.11.2",
    "react-modal": "^3.8.1",
    "react-scrollable-anchor": "^0.6.1",
    "react-table": "^6.9.2",
    "turbolinks": "^5.0.3",
    "webpacker-react": "^0.3.2"
  },
  "devDependencies": {
    "@sentry/webpack-plugin": "^1.6.2",
    "babel-eslint": "7.2.3",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-runtime": "^6.26.0",
    "caniuse-lite": "^1.0.30000960",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.16.0",
    "eslint-plugin-class-property": "1.0.6",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-html": "^4.0.6",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^21.27.2",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "7.4.0",
    "jest": "^23.6.0",
    "react-test-renderer": "^16.8.6",
    "sinon": "^4.5.0",
    "snazzy": "^7.1.1",
    "standard": "^11.0.1",
    "webpack": "3.8.1",
    "webpack-dev-server": "^2.9.3"
  },
  "scripts": {
    "unit": "jest --testPathPattern=.*.test.js$ --coverage",
    "e2e": "jest --testPathPattern=.*e2e.* --runInBand. --forceExit",
    "test:all": "jest",
    "lint": "standard \"./**/*.js\" | snazzy",
    "lint:fix": "standard \"./**/*.js\" --fix | snazzy"
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ],
    "clearMocks": true,
    "testMatch": [
      "**/__tests__/**/*.js?(x)",
      "**/?(*.)+(spec|test|e2e).js?(x)"
    ],
    "testURL": "http://localhost/",
    "setupFiles": [
      "./spec/javascript/jestsetup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "roots": [
      "spec/javascript"
    ],
    "cache": false,
    "resetModules": true,
    "moduleDirectories": [
      "node_modules",
      "app/javascript"
    ]
  },
  "standard": {
    "ignore": [
      "./node_modules/**/*",
      "./spec/javascript/fixtures/*",
      "app/assets/javascripts/cable.js",
      "public/**/*"
    ],
    "env": [
      "jest"
    ],
    "parser": "babel-eslint"
  }
}
