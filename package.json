  },
  "devDependencies": {
    "babel-eslint": "7.2.3",
    "babel-jest": "^24.7.1",
    "caniuse-lite": "^1.0.30000960",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.16.0",
    "eslint-plugin-class-property": "1.0.6",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-html": "^4.0.6",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^21.27.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "grunt": "^1.0.4",
    "grunt-contrib-clean": "2.0.0",
    "grunt-contrib-copy": "1.0.0",
    "grunt-json-remove-fields": "^0.1.2",
    "grunt-replace": "1.0.1",
    "grunt-sort-json": "0.0.5",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "postcss-cssnext": "^3.1.0",
    "react-test-renderer": "^16.9.0",
    "sinon": "^4.5.0",
    "snazzy": "^7.1.1",
    "standard": "^11.0.1",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1"
  },
  "scripts": {
    "unit": "jest --testPathPattern=.*.test.js$ --coverage",
    "e2e": "jest --testPathPattern=.*e2e.* --runInBand. --forceExit",
    "test:all": "jest",
    "lint": "standard \"./**/*.js\" | snazzy",
    "lint:fix": "standard \"./**/*.js\" --fix | snazzy",
    "rails-server": "rails s",
    "webpack-hot": "bin/webpack-dev-server --hot",
    "start": "npm-run-all -p -l webpack-hot rails-server"
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ],
    "clearMocks": true,
    "testMatch": [
      "**/__tests__/**/*.js?(x)",
      "**/?(*.)+(spec|test|e2e).js?(x)"
    ],
    "testURL": "http://localhost/",
    "setupFiles": [
      "./spec/javascript/jestsetup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "roots": [
      "spec/javascript"
    ],
    "cache": false,
    "resetModules": true,
    "moduleDirectories": [
      "node_modules",
      "app/javascript"
    ]
  },
  "standard": {
    "ignore": [
      "./node_modules/**/*",
      "./spec/javascript/fixtures/*",
      "app/assets/javascripts/cable.js",
      "public/**/*"
    ],
    "env": [
      "jest"
    ],
    "parser": "babel-eslint"
  }
}